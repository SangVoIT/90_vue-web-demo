{
  // "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*","src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/*", 
    "node_modules",
    "public/**/*",
    "dist/**"
  ],
  "compilerOptions": {
    "outDir": "dist/demoWeb",
    "module": "es2022", //  "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Node",
    "lib": ["dom", "es2022", "esnext"],
    "types": ["node", "vite/client"]
  }
} 